    <style>
        @import url("https://fonts.googleapis.com/css2?family=Montserrat&display=swap");

        body {
            font-family: "Montserrat";
            background-color: rgb(13, 51, 51);
        }

        .event-page {
            margin-top: 1rem;
            font-size: 3vw;
            color: #fff;
            text-align: center;
            letter-spacing: 0.3rem;
            font-family: "Montserrat", sans-serif;
        }

        .box {
            font-family: "Montserrat" !important;
            width: 600px;
            height: 600px;
            padding: 40px;
            position: relative;
            top: 300px;
            left: 50%;
            transform: translate(-50%, -50%);
            border-radius: 5%;
            text-align: center;

        }


        .box input[type="submit"] {
            border: 0;
            background: none;
            display: block;
            height: 70px;
            margin-top: 40px;
            margin-left: 32%;

            text-align: center;

            border: 2px solid #2ecc71;

            padding: 10px 40px;

            outline: none;

            color: white;

            border-radius: 50px;

            transition: 0.25s;

            cursor: pointer;
        }

        .box input[type="submit"]:hover {
            background: #2ecc71;
        }
    </style>

</head>

<body>

    <nav class="navbar">
        <div class="logo">
            <a href="/" class="navbar-brand animated flip"><img src="../image/logo.png" alt="" width="100px"
                    height="90px"></a>
            <div class="navbar-links">
            </div>
    </nav>
    <div>
        <h1 class="event-page">Choose the Role</h1>
        <form class="box" method="get">
            <input type="Submit" value="Security" formaction="security_login">
            <input type="Submit" value="Student" formaction="student_login">
            <div id='status' class='invisible'>{{message }}</div>
        </form>
    </div>


    <script>
        if ($('div#status').text() != '') {
            var msg = $('div#status').text()
            if (msg == 'Logout Successful!') {
                swal.fire({
                    icon: "Success",
                    title: "Message",
                    text: msg
                });
            }
            
        }
    </script>
